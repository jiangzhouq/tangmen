<?xml version="1.0" encoding="utf-8"?>
<merge android:id="@id/navigationBar"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="left|center" android:orientation="horizontal" android:id="@id/leftBox" android:layout_width="wrap_content" android:layout_height="@dimen/navi_item_height" android:layout_alignParentLeft="true" />
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/centerBox" android:layout_width="wrap_content" android:layout_height="@dimen/navi_item_height" android:layout_centerInParent="true" />
    <LinearLayout android:gravity="right|center" android:orientation="horizontal" android:id="@id/rightBox" android:layout_width="wrap_content" android:layout_height="@dimen/navi_item_height" android:layout_alignParentRight="true" />
    <TextView android:id="@id/navBottomLine" android:background="@color/navi_line" android:layout_width="fill_parent" android:layout_height="@dimen/navi_bottom_line_height" android:layout_below="@id/leftBox" />
</merge>
